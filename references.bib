  doi = {10.1016/j.ttbdis.2019.101271},
  author = {Ginsberg, Howard S. and Rulison, Eric L. and Miller, Jasmine L. and Pang, Genevieve and Arsnoe, Isis M. and Hickling, Graham J. and Ogden, Nicholas H. and LeBrun, Roger A. and Tsao, Jean I.},

@article{Flory2010,
  title = {Non-Native Grass Invasion Alters Native Plant Composition in Experimental Communities},
  volume = {12},
  issn = {13873547},
  abstract = {Invasions of non-native species are considered to have significant\textbackslash{}nimpacts on native species, but few studies have quantified the direct\textbackslash{}neffects of invasions on native community structure and composition. Many\textbackslash{}nstudies on the effects of invasions fail to distinguish between (1)\textbackslash{}ndifferential responses of native and non-native species to environmental\textbackslash{}nconditions, and (2) direct impacts of invasions on native communities.\textbackslash{}nIn particular, invasions may alter community assembly following\textbackslash{}ndisturbance and prevent recolonization of native species. To determine\textbackslash{}nif invasions directly impact native communities, we established 32\textbackslash{}nexperimental plots (27.5 m(2)) and seeded them with 12 native species.\textbackslash{}nThen, we added seed of a non-native invasive grass (Microstegium\textbackslash{}nvimineum) to half of the plots and compared native plant community\textbackslash{}nresponses between control and invaded plots. Invasion reduced native\textbackslash{}nbiomass by 46, 64, and 58\%, respectively, over three growing seasons.\textbackslash{}nAfter the second year of the experiment, invaded plots had 43\% lower\textbackslash{}nspecies richness and 38\% lower diversity as calculated from the Shannon\textbackslash{}nindex. Nonmetric multidimensional scaling ordination showed a\textbackslash{}nsignificant divergence in composition between invaded and control plots.\textbackslash{}nFurther, there was a strong negative relationship between invader and\textbackslash{}nnative plant biomass, signifying that native plants are more strongly\textbackslash{}nsuppressed in densely invaded areas. Our results show that a non-native\textbackslash{}ninvasive plant inhibits native species establishment and growth\textbackslash{}nfollowing disturbance and that native species do not gain competitive\textbackslash{}ndominance after multiple growing seasons. Thus, plant invaders can alter\textbackslash{}nthe structure of native plant communities and reduce the success of\textbackslash{}nrestoration efforts.},

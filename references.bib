  journal = {Functional Ecology},
  doi = {10.1111/j.1365-2435.2012.02041.x},
  author = {Dunn, Alison M. and Torchin, Mark E. and Hatcher, Melanie J. and Kotanen, Peter M. and Blumenthal, Dana M. and Byers, James E. and Coon, Courtney A C and Frankel, Victor M. and Holt, Robert D. and Hufbauer, Ruth A. and Kanarek, Andrew R. and Schierenbeck, Kristina A. and Wolfe, Lorne M. and Perkins, Sarah E.},

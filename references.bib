  journal = {PLoS ONE},
  doi = {10.1371/journal.pone.0116952},
  author = {Platt, William J. and Orzell, Steve L. and Slocum, Matthew G.},
  year = {2015},
  keywords = {fire ecology,longleaf pine,fire,fire management,cluster analysis},
  pages = {1-28},

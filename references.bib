  journal = {Agriculture, Ecosystems and Environment},
  doi = {10.1016/j.agee.2011.11.017},
  author = {Caffarra, Amelia and Rinaldi, Monica and Eccel, Emanuele and Rossi, Vittorio and Pertot, Ilaria},
  year = {2012},
  pages = {89-101},
  isbn = {0167-8809},
  publisher = {Elsevier B.V.}
}

@article{Guyader2013,
  title = {Modelling the Effects of Temperature and Leaf Wetness on Monocyclic Infection in a Tropical Fungal Pathosystem},

  year = {2015},
  keywords = {fire},
  pages = {992-1000},
  file = {/Users/whalendillon/Zotero/storage/M3VLIRYT/Flory et al_2015_Fire and non-native grass invasion interact to suppress tree regeneration in.pdf},

  doi = {10.1007/s10658-013-0185-8},
  author = {Guyader, S{\'e}bastien and Crombez, Julia and Salles, Mich{\`e}le and Bussi{\`e}re, Fran{\c c}ois and Bajazet, Thierry},
  year = {2013},

  year = {2010},
  keywords = {fire},
  pages = {53-69},
  file = {/Users/whalendillon/Zotero/storage/J3DS49PY/Krebs et al_2010_Fire regime.pdf},
  isbn = {1431-7613},
  mendeley-tags = {fire},
  pmid = {20502984}
}

@article{Plowright2008,

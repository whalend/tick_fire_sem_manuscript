  author = {Flint, Lorraine E. and Flint, Alan L.},
  year = {2012},
  pages = {55},
  file = {/Users/whalendillon/Zotero/storage/SZ2KEQDB/Flint_Flint_2012_Simulation of Climate Change in San Francisco Bay Basins, California.pdf}
}

